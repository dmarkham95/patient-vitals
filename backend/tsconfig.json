    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
   // "esModuleInterop": true,
   "lib": [
    "es2019"
  ]
  },
  "include": [
     "src/**/*"
 ],
 "exclude": [
     "node_modules","**/*.spec.ts"
 ]
}